<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.InsertCity">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtCityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/txt_color"
        android:textColorHint="@color/txt_color"
        android:gravity="center"
        android:backgroundTint="@color/txt_color"
        android:inputType="text"
        android:autofillHints="@string/city_name"
        android:maxLines="1"
        android:hint="@string/city_name"
        android:imeOptions="actionSearch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:onClick="lookupClicked"
        android:text="@string/lookup"
        android:textAllCaps="false"
         android:textColor="@color/txt_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="normal"
        android:background="@drawable/button_border"
        app:cornerRadius="@dimen/_5sdp"
        app:strokeColor="@color/txt_color"
        app:layout_constraintTop_toBottomOf="@+id/edtCityName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>