<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/txt_color</item>
        <item name="colorPrimaryVariant">@color/txt_color</item>
        <item name="colorControlActivated">@color/txt_color</item>
        <item name="colorControlHighlight">@color/txt_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/txt_color</item>
        <item name="colorSecondaryVariant">@color/txt_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.FullScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/txt_color</item>
        <item name="colorSecondary">@color/txt_color</item>
    </style>
</resources>